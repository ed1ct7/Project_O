<UserControl x:Class="Project_O.UserControls.ucDay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:UserControls="clr-namespace:Project_O.UserControls"
             xmlns:local="clr-namespace:Project_O.Classes"
             mc:Ignorable="d" 
             d:DesignHeight="180" d:DesignWidth="120">
    <Border x:Name="Border" BorderBrush="LightGray" BorderThickness="1" CornerRadius="{Binding DefaultCornerRadius, Source={x:Static local:Properties.Instance}}" Margin="5" Padding="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel x:Name="StackPanel">
                <TextBlock Text="{Binding DayOfWeek}" Foreground="White" HorizontalAlignment="Center" FontSize="14"/>
                <TextBlock Text="{Binding DayNumber}" Foreground="White"  HorizontalAlignment="Right" Margin="0,5,0,0" FontSize="14"/>
            </StackPanel>

            
            <!-- Lessons and Button -->
            <StackPanel x:Name="StackPanelLessons" Grid.Row="1">
                <!-- Scrollable Lessons -->
                <ScrollViewer 
                    VerticalScrollBarVisibility="Auto"
                    MaxHeight="200">
                    <!-- Prevents infinite expansion -->
                    <ItemsControl x:Name="LessonsCollection" ItemsSource="{Binding Lessons}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <UserControls:ucLesson Margin="0,0,0,0"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Fixed Button -->
                <Button  x:Name="AddLessonButton"
                    Content="+"
                    Margin="0,0,0,0"
                    Click="AddLessonButton_Click"
                    />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>