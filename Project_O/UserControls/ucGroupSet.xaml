<UserControl x:Class="Project_O.UserControls.ucGroupSet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:UserControls="clr-namespace:Project_O.UserControls"
             xmlns:local="clr-namespace:Project_O.Classes"
             mc:Ignorable="d"
             d:DesignHeight="390" d:DesignWidth="285">
    <Grid>
        <!--GroupEntry-->
        <Grid Grid.Row="1" Margin="20,0,20,30" x:Name="GroupCreation" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>

            <Label Style="{StaticResource S_Header}" Content="Создание группы"
                   Tag="9"
                   Margin="10,0"
            ></Label>

            <TextBox Grid.Row="1" Style="{StaticResource S_PlaceHolderText}" Tag="Имя" 
                Margin="10" ></TextBox>
            <TextBox Grid.Row="2" Style="{StaticResource S_PlaceHolderText}" Tag="Код для создания группы" 
                Margin="10" ></TextBox>
            
            <Button Content="Создать" 
            Margin="10" Grid.Row="4"
            Tag="9"
            Style="{StaticResource S_Auth}"></Button>

            <Grid Grid.Row="6" Margin="10,3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label Content="" Grid.Column="0" FontWeight="Medium"
                   Foreground="{Binding FG_Control, Source={x:Static local:Properties.Instance}}"
                   HorizontalAlignment="Center"
               ></Label>
                <Button Grid.Column="1"
                    Margin="0,0,9,0"
                    HorizontalAlignment="Right"
                    Click="SwitchWinButton_Click" FontWeight="Medium"
                    Style="{StaticResource S_TextButton}" Content="Вход в группу ►"></Button>
                <Button Grid.Column="0"
                    Margin="9,0,0,0"
                    HorizontalAlignment="Left"
                    Click="SwitchAuthButton_Click" FontWeight="Medium"
                    Style="{StaticResource S_TextButton}" Content="◄ Авторизация"></Button>
            </Grid>
        </Grid>
        
        <!--GroupCreation-->
        <Grid Grid.Row="1" Margin="20,0,20,30" x:Name="GroupEntry" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Style="{StaticResource S_Header}" Content="Регистрация"
           Margin="10"></Label>
            <TextBox Grid.Row="1" Style="{StaticResource S_PlaceHolderText}" Tag="Имя" 
             Margin="10" ></TextBox>
            <UserControls:ucPasswordBox Grid.Row="2" Margin="10"/>

            <Button Content="Зарегестрировать" Margin="10" Grid.Row="4" Style="{StaticResource S_Auth}"></Button>

            <Grid Grid.Row="6" Margin="10,3" HorizontalAlignment="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label Content="Уже есть аккаунт?" Grid.Column="0" FontWeight="Medium"
           Foreground="{Binding FG_Control, Source={x:Static local:Properties.Instance}}"
           HorizontalAlignment="Center"
           ></Label>
                <Button Grid.Column="1"
                FontWeight="Medium"
            Style="{StaticResource S_TextButton}" Width="40" Content="Войти"></Button>
            </Grid>

        </Grid>
    </Grid>
</UserControl>
