<Window x:Class="Project_O.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_O"
        mc:Ignorable="d"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Title="MainWindow"
        Height="450" 
        Width="800"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize">

    <WindowChrome.WindowChrome>
        <WindowChrome 
            CornerRadius="0"
            GlassFrameThickness="0" 
            CaptionHeight="40" 
            ResizeBorderThickness="6"
            UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <!-- Main container with proper rounded corners -->
    <Border CornerRadius="15" 
            Background="White" 
            BorderBrush="Gray" 
            BorderThickness="1"
            SnapsToDevicePixels="True"
            ClipToBounds="True">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title bar area -->
            <Grid Grid.Row="0" Background="Transparent" WindowChrome.IsHitTestVisibleInChrome="True">
                <TextBlock Text="MainWindow" VerticalAlignment="Center" Margin="10,0"/>

                <!-- Window buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button x:Name="btnMinimize" Content="🗕" Width="40" Height="30" Padding="0,0,10,0"
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                            Click="btnMinimize_Click"/>
                    <Button x:Name="btnMaximize" Content="🗖" Width="40" Height="30" Padding="0,0,10,0"
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                            Click="btnMaximize_Click"/>
                    <Button x:Name="btnClose" Content="✖" Width="40" Height="30" Padding="0,0,10,0"
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                            Click="btnClose_Click"/>
                </StackPanel>
            </Grid>

            <!-- Content area with rounded bottom corners -->
            <Border Grid.Row="1" 
                    Background="White" 
                    CornerRadius="0,0,15,15"
                    Margin="0,-1,0,0"
                    ClipToBounds="True">
                <!-- Your main content goes here -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <!-- Content area takes remaining space -->
                        <RowDefinition Height="Auto"/>
                        <!-- Title bar will size to its content -->
                        <RowDefinition Height="*"/>
                        <!-- Content area takes remaining space -->
                        <RowDefinition Height="Auto"/>
                        <!-- Title bar will size to its content -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="1" Grid.ColumnSpan="7" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"> Числитель </TextBlock>
                    <TextBlock Grid.Row="3" Grid.ColumnSpan="7" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"> Знаменатель </TextBlock>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>