<Window x:Class="Project_O.Windows.Start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_O.Classes"
        xmlns:UserControls="clr-namespace:Project_O.UserControls"
        mc:Ignorable="d"
        Title="Start" 
        
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Height="450" 
        Width="300"
        WindowStyle="None"
        
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize"
        >
    <WindowChrome.WindowChrome>
        <WindowChrome 
            CornerRadius="0"
            GlassFrameThickness="0" 
            CaptionHeight="40" 
            ResizeBorderThickness="6"
            UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Border CornerRadius="8"
            Background="{Binding BG_Default, Source={x:Static local:Properties.Instance}}" 
            BorderBrush="Gray" 
            BorderThickness="1"
            SnapsToDevicePixels="True"
            ClipToBounds="True">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <!--WindowMenu-->
            <Grid Grid.Row="0" Grid.ColumnSpan="3" Background="Transparent" WindowChrome.IsHitTestVisibleInChrome="True">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button x:Name="btnMinimize" Content="🗕"
                        Style="{StaticResource S_WMClose}"
                        Click="btnMinimize_Click"/>
                                        <Button x:Name="btnMaximize" Content="🗖"
                        Style="{StaticResource S_WMOther}"
                        Click="btnMaximize_Click"/>
                                    <Button x:Name="btnClose" Content="✖"
                        Style="{StaticResource S_WMOther}"
                        Click="btnClose_Click"/>
                </StackPanel>
            </Grid>
            <!--AccountEntry-->
            <Grid Grid.Row="1" Margin="20,0,20,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Label Grid.Row="1" Style="{StaticResource S_Header}" Content="Вход в аккаунт"></Label>
                <TextBox Grid.Row="2" Style="{StaticResource S_PlaceHolderText}" Tag="Имя" Margin="10" ></TextBox>
                <UserControls:ucPasswordBox Grid.Row="3" Margin="10"/>
            </Grid>
        </Grid>

    </Border>
</Window>